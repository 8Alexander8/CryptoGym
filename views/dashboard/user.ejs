<%- include ('./partials/header') %>
<div class="container">
    <div class="text-center">
        <h1 class="h3 mb-5 text-gray-800">User Profile</h1>
    </div>
    <div class="card shadow">
        <h5 class="card-header">User Info</h5>
        <div class="row">
            <div class="col-md-6">
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <strong>Name:</strong> <%= currentUser.username %>
                        </li>
                        <li class="list-group-item">
                            <strong>Email:</strong> <%= currentUser.email %>
                        </li>
                        <li class="list-group-item">
                            <strong>Nickname:</strong> <%= currentUser.nickname %>
                        </li>
                        <li class="list-group-item">
                            <strong>Joined At:</strong> <%= currentUser.createdAt %>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card-body text-center">
                    <img src="/assets/uploads/images/<%= currentUser.image %>" alt="..."
                        class="img-thumbnail rounded float-right" />
                    <form action="/dashboard/user/upload-image" method="post" enctype="multipart/form-data">
                        <input type="file" name="image" />
                        <input type="submit" value="Upload" class="btn btn-success" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include ('./partials/footer') -%>